<UserControl x:Class="OsuAchievedOverlay.Controls.ScoreItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OsuAchievedOverlay.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="400" FontFamily="/OsuAchievedOverlay;component/Assets/Fonts/#Torus">
    <Grid>
        <Grid>
            <Border CornerRadius="10" Background="#88000000" >
            </Border>
            <Grid HorizontalAlignment="Right" VerticalAlignment="Top" Height="32" Width="30">
                <Image x:Name="ImageRankIcon" HorizontalAlignment="Center" VerticalAlignment="Center" Height="32" Width="30" Source="/OsuAchievedOverlay;component/Assets/Images/Ranks/S.png"/>
            </Grid>
            <Label Name="LabelScore" Margin="0,0,30,0" Content="1,000,000" HorizontalAlignment="Right" VerticalAlignment="Top" HorizontalContentAlignment="Right" FontSize="20"/>
            <Label Name="LabelBeatmapName" Content="Save Me [Save]" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        </Grid>
    </Grid>
</UserControl>
